<!DOCTYPE html>
<html>
<head>

  <title>betterBlurter</title>
  <%= favicon_link_tag image_path('favicon.ico') %>
  <%= stylesheet_link_tag    "application", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application",  "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "data-turbolinks-track" => true %>
  <title><%= yield :title %></title>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="<%=root_path%>">betterBlurter</a>
  </div>
  <div class="navbar-collapse collapse navbar-responsive-collapse">
    <ul class="nav navbar-nav">

    </ul>
    <!--
    <form class="navbar-form navbar-left" id="listingSearch" action='/listings' data-remote="true">
      <input type="text" class="form-control col-lg-8" id="search" placeholder="Search" name='search'>

    </form>
  -->
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
        <li><%= link_to current_user.username, user_path(current_user) %></li>

      <% else %>
        <li><a href="<%= new_user_session_path %>">Sign In</a></li>
         <li><a href="<%= new_user_registration_path %>">Sign Up</a></li>
      <% end %>
    </ul>
  </div>
  </div>
  <div class="container">

  <% flash.each do |name, msg| %>
  <%= content_tag :div, msg, id: "flash_#{name}" %>
  <% end %>
    <%= yield %>
  <div class="results">
  </div>

</div>
</body>
</html>
